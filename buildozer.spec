[app]

# (str) Title of your application
title = Exciting Android Game

# (str) Package name
package.name = exciting_android_game

# (str) Package domain (unique identifier)
package.domain = org.example

# (str) Version of your application
version = 1.0.0

# (str) The directory where your application's source code is located
source.dir = .

# (str) Filename of your main Python file
source.include_exts = py,png,jpg,kv,atlas

# (list) Application requirements
# This includes libraries like pygame
# You can add other libraries your game may need
# Example: requirements = python3, pygame
requirements = python3, pygame

# (str) Android package (e.g. 'com.example.myapp')
# This is often the same as 'package.name'
package.name = exciting_android_game
